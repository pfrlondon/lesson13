<h1>Listing reviews</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Review</th>
    <th>Score</th>
    <th>Movie</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reviews.each do |review| %>
  <tr>
    <td><%= review.author %></td>
    <td><%= review.review %></td>
    <td><%= review.score %></td>
    
    <td>
      <% if review.movie.present? %>
        <%= link_to review.movie.title, movie_path(review.movie) %>
      <% else %>
        Movie deleted
      <% end %>
    </td>

    <td><%= link_to 'Show', review %></td>
    <td><%= link_to 'Edit', edit_review_path(review) %></td>
    <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Review', new_review_path %>
