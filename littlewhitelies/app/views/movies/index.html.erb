<h1>Listing movies</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Release date</th>
    <th>Reviews</th>
    <th>Avg</th>
    <th>Festivals</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td><%= movie.title %></td>
    <td><%= movie.description %></td>
    <td><%= movie.release_date %></td>
    <td><%= 
        link_to pluralize(movie.reviews.size, "review"),
            reviews_movie_path(movie) 
    %></td>
    <td><%= movie.average_score %></td>

    <td>
<% movie.festivals.each do |festival| %>
    <%= link_to festival.name, festival_path(festival) %>
<% end %>
    </td>


    <td><%= link_to 'Show', movie %></td>
    <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
    <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

